{{define "content"}}
{{template "header"}}

<div class="main" id="content">
{{range .}}
  {{with .Useddata}}
    {{range .}}
    
    <div class="item" >
      <div class="date">
      <span style='display:none' class='dateString'>{{.Date}}</span>
      <span class="week">星期三</span><span class="day">2014.05.10</span></div>
      <ul class="list clearfix">
      {{range .MainPages}}
        <li>
          <a class="box" href="http://daily.zhihu.com/story/{{.Id}}">
            <span class="picbox"><img class="pic" src="/img/croped/{{ .ShareImage }}" alt=""></span>
            <span class="title">{{ .Title }}</span>
          </a>
        </li>
      {{end}}
      </ul>
    </div>
    {{end}}
  {{end}}
</div>

<div class="main" id="page">
  <span class="prev">&lsaquo;</span>
  <span class="selected">1</span>
  <a>2</a>
  <a>3</a>
  <span class="shen">...</span>
  <a>9</a>
  <a>10</a>
  <a class="next">&rsaquo;</a>
</div>
<div class="main">
  <a href="#" id="top">Top</a>
</div>
<script src="build/common/jquery-1.11.1.js"></script>
<script src="build/index/index.js?t=20141023"></script>
{{end}}
{{template "footer"}}
{{end}}